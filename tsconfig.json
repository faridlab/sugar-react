{
  "compilerOptions": {
    "baseUrl": "src/",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@component/*": ["./app/components/*"],
      "@service/*": ["./app/services/*"],
      "@routes/*": ["./app/routes/*"],
      "@i18n/*": ["./app/i18n/*"],
      "@store/*": ["./app/store/*"],
      "@domain/*": ["./domain/*"],
      "@device/*": ["./device/*"],
      "@assets/*": ["./assets/*"],
      "@fonts/*": ["./assets/fonts/*"],
      "@images/*": ["./assets/images/*"],
      "@theme/*": ["./theme/*"],
      "@shared/*": ["./shared/*"],
      "@data/*": ["./data/*"],
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
